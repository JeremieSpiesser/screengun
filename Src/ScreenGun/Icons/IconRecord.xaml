<UserControl x:Class="ScreenGun.Icons.IconRecord"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Ellipse VerticalAlignment="Center" Fill="Transparent" Stroke="{Binding OuterColor}" StrokeThickness="{Binding SizeEighth}" Width="{Binding Size}" Height="{Binding Size}" />
        <Ellipse VerticalAlignment="Center" Fill="{Binding InnerColor}" StrokeThickness="{Binding SizeEighth}" Width="{Binding SizeHalf}" Height="{Binding SizeHalf}" />
    </Grid>
</UserControl>
