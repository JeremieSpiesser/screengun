<Window x:Class="ScreenGun.Modules.RegionSelector.RegionSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RegionSelectorView"
        WindowStyle="None"
        WindowStartupLocation="Manual"
        Left="0"
        Top="0"
        Topmost="False"
        AllowsTransparency="true"
        Background="#01ffffff">
    <Window.Resources>
        <Style x:Key="CellStyle" TargetType="Border">
            <Setter Property="Background" Value="#8000"></Setter>
            <Setter Property="BorderBrush" Value="GreenYellow"></Setter>
        </Style>
    </Window.Resources>

    <Grid MouseLeftButtonDown="OverlayGridMouseDown" MouseMove="OverlayGridOnMouseMove" MouseUp="OverlayGridOnMouseUp">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="LeftColumn" Width="*"></ColumnDefinition>
            <ColumnDefinition x:Name="CenterColumn" Width="*"></ColumnDefinition>
            <ColumnDefinition x:Name="RightColumn" Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="TopRow" Height="*"></RowDefinition>
            <RowDefinition x:Name="CenterRow" Height="*"></RowDefinition>
            <RowDefinition x:Name="BottomRow" Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Border Style="{StaticResource CellStyle}" Grid.Column="0" Grid.Row="0">
            <Grid 
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom">
                    <Rectangle 
                    Fill="White" 
                    Width="4" 
                    Height="10" 
                    Margin="0 0 0 0"/>
                <Rectangle 
                    Fill="White" 
                    Width="10" 
                    Height="4" 
                    Margin="6 0 0 6"/>
            </Grid>
            
        </Border>
        <Border Style="{StaticResource CellStyle}" Grid.Column="1" Grid.Row="0" BorderThickness="0 0 0 2" />
        <Border Style="{StaticResource CellStyle}" Grid.Column="2" Grid.Row="0" />
        <Border Style="{StaticResource CellStyle}" Grid.Column="0" Grid.Row="1" BorderThickness="0 0 2 0" />

        <Border Style="{StaticResource CellStyle}" Grid.Column="2" Grid.Row="1" BorderThickness="2 0 0 0" />
        <Border Style="{StaticResource CellStyle}" Grid.Column="0" Grid.Row="2" />
        <Border Style="{StaticResource CellStyle}" Grid.Column="1" Grid.Row="2" BorderThickness="0 2 0 0" />
        <Border Style="{StaticResource CellStyle}" Grid.Column="2" Grid.Row="2" />
        
        
        <Border Grid.Column="1" Grid.Row="1" Background="#01000000" />
    </Grid>

</Window>
